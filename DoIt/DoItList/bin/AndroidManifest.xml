<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.asteromania.doitlist"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.asteromania.doitlist.activities.DoItMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.asteromania.doitlist.activities.DoItCreateActivity"
            android:windowSoftInputMode="stateVisible"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="de.asteromania.doitlist.CREATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.asteromania.doitlist.activities.DoItUpdateActivity"
            android:windowSoftInputMode="stateVisible"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="de.asteromania.doitlist.UPDATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>