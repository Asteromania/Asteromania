<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_right_margin"
    android:paddingLeft="@dimen/activity_left_margin"
    android:paddingRight="@dimen/activity_right_margin"
    android:paddingStart="@dimen/activity_left_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textview_list_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp"
        android:text="@string/list_menu_heading"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_create_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_list_menu"
        android:onClick="createClicked"
        android:text="@string/button_create_list"
        android:textSize="18sp" />
    
    <ListView
        android:id="@+id/lists_listview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/button_create_list" />

</RelativeLayout>