<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textview_create_doittask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:text="@string/create_doittask_heading" />

    <EditText
        android:id="@+id/edittext_create_doittask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_create_doittask"
        android:hint="@string/create_doittask_hint"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:maxLines="4" />

    <DatePicker
        android:id="@+id/date_picker_create_doittask"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_create_doittask"
        android:calendarViewShown="false" />

    <Button
        android:id="@+id/button_create_doittask_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_picker_create_doittask"
        android:onClick="okayClicked"
        android:text="@string/button_ok" />

</RelativeLayout>